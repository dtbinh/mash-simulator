material Decals/Arrow-Left
{
    technique
    {
        pass
        {
            scene_blend alpha_blend
            depth_write off

            ambient 0.3 0.3 0.3
            diffuse 0.8 0.8 0.8

            texture_unit
            {
                texture left-arrow.tga
            }
        }
    }
}


