material Decals/Hazard-Stripes
{
    technique
    {
        pass
        {
            ambient 0.3 0.3 0.3
            diffuse 0.7 0.7 0.7

            texture_unit
            {
                filtering anisotropic
                max_anisotropy 8

                texture hazard-stripes.tga
            }
        }
    }
}


